{
  "name": "tandem",
  "version": "0.0.1",
  "description": "tandem app test",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "server": "node ./server/bin/www"
  },
  "dependencies": {
    "@types/enzyme": "^3.10.5",
    "axios": "^0.19.2",
    "color": "^3.1.2",
    "ramda": "^0.27.1",
    "react": "16.13.1",
    "react-native": "0.63.2",
    "react-native-circular-progress": "^1.3.6",
    "react-native-safe-area-context": "^3.1.4",
    "react-native-svg": "^12.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/runtime": "^7.8.4",
    "@react-native-community/eslint-config": "^1.1.0",
    "@testing-library/react-hooks": "^3.4.1",
    "@testing-library/react-native": "^7.0.1",
    "@types/color": "^3.0.1",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.9",
    "@types/ramda": "^0.27.14",
    "@types/react-native": "^0.63.2",
    "@types/react-test-renderer": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "axios-mock-adapter": "^1.18.2",
    "babel-jest": "^25.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.19.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-react": "7.17.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "eslint-plugin-react-native": "3.8.1",
    "eslint-plugin-standard": "4.0.1",
    "jest": "^25.1.0",
    "jest-enzyme": "^7.1.2",
    "jetifier": "1.6.4",
    "metro-react-native-babel-preset": "^0.59.0",
    "prettier": "^2.0.4",
    "react-dom": "^16.13.1",
    "react-test-renderer": "16.13.1",
    "ts-jest": "^26.1.4",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "react-native",
    "clearMocks": true,
    "timers": "fake",
    "coverageReporters": [
      "json",
      "lcov",
      "html",
      "text",
      "clover"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setup-enzyme.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-native|@react-native-community)"
    ],
    "collectCoverageFrom": [
      "<rootDir>/app/**/*.{ts,tsx}",
      "!<rootDir>/app/**/debug/*.{ts,tsx}",
      "!<rootDir>/app/**/debug-*/*.{ts,tsx}",
      "!<rootDir>/app/**/debug-*.{ts,tsx}",
      "!<rootDir>/app/**/*.story.{ts,tsx}",
      "!<rootDir>/**/@types/**/*",
      "!<rootDir>/**/*.d.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "standard",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-native/all",
      "prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-native",
      "react-hooks"
    ],
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      }
    },
    "globals": {
      "__DEV__": false,
      "jasmine": false,
      "beforeAll": false,
      "afterAll": false,
      "beforeEach": false,
      "afterEach": false,
      "test": false,
      "expect": false,
      "describe": false,
      "jest": false,
      "it": false
    },
    "rules": {
      "camelcase": 0,
      "comma-dangle": 0,
      "no-unused-vars": 0,
      "no-undef": 0,
      "quotes": 0,
      "generator-star-spacing": 0,
      "react/no-unescaped-entities": 0,
      "react/prop-types": 0,
      "react/display-name": 0,
      "react-native/no-raw-text": 0,
      "space-before-function-paren": 0,
      "react-native/no-inline-styles": 0,
      "react-native/no-color-literals": 0,
      "spaced-comment": 0,
      "@typescript-eslint/indent": 0,
      "@typescript-eslint/no-non-null-assertion": 0,
      "@typescript-eslint/explicit-member-accessibility": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/member-delimiter-style": 0,
      "@typescript-eslint/no-object-literal-type-assertion": 0,
      "@typescript-eslint/no-empty-interface": 0,
      "@typescript-eslint/no-var-requires": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/camelcase": 0,
      "@typescript-eslint/no-use-before-define": 0,
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react-native/sort-styles": [
        "error",
        "asc",
        {
          "ignoreClassNames": true,
          "ignoreStyleProperties": true
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "*.test.ts",
          "*.test.tsx",
          "*.story.tsx",
          "debug*.tsx"
        ],
        "rules": {
          "@typescript-eslint/no-non-null-assertion": 0
        }
      }
    ]
  },
  "peerDependencies": {}
}
